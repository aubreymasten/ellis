<div class="scene">
  <h3><%= scene.title %></h3>
  <p><%= scene.get_desc(140) %></p>
  <p><strong>choices:</strong></p>
  <ul>
    <% scene.get_choices(3).each do |choice| %>
      <li><%= choice.text %></li>
    <% end %>
    <% if scene.choices.length > 3 %>
      <li><strong>more choices</strong></li>
    <% end %>
  </ul>
</div>
