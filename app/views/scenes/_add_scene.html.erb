<h3>you have indicated that you would like to add a new scene</h3>
<div id="errors"></div>
<%= form_for [@story, @scene], remote: true do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title %>
  <%= f.label :text%>
  <%= f.text_area :text, size: "30x10" %>
  <%= f.submit "save scene" %>
<% end %>
